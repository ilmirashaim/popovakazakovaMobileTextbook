<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lim.one.popovakazakova" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Base.V21.Theme.AppCompat"
        android:name=".EbookApplication">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Base.V21.Theme.AppCompat"
            android:label="@string/activity_lessons">
        </activity>
        <activity
            android:name=".SoundActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Base.V21.Theme.AppCompat"
            android:label="@string/SoundSection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            >
        </activity>
        <activity
            android:name=".PhoneticExerciseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Base.V21.Theme.AppCompat"
            android:label="@string/PhoneticExerciseSection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            >
        </activity>
        <activity
            android:name=".PhraseWordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Base.V21.Theme.AppCompat"
            android:label="@string/PhraseWordSection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            >
        </activity>
        <activity
            android:name=".DialogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Base.V21.Theme.AppCompat"
            android:label="@string/DialogSection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            >
        </activity>
    </application>

</manifest>
